---
import Contacto from "../components/Contacto.astro";
import Presentacion from "../components/Presentacion.astro";
import SobreMi from "../components/SobreMi.astro";
import Tecnologias from "../components/Tecnologias.astro";
import Tema from "../components/Tema.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio NIkita</title>
	</head>
	<body class="flex h-screen w-screen items-center justify-center md:hidden bg-radial from-[#560E89] from-45% to-[#372544]">
		<div class="grid justify-center w-full h-full max-w-screen-sm max-h-screen grid-cols-3 gap-5 p-5 overflow-hidden grid-rows-7">
			<div class="w-full h-full col-span-2 row-span-1"><Presentacion/></div>
			<div class="w-full h-full col-span-1 row-span-3"><SobreMi/></div>
			<div class="w-full h-full col-span-2 row-span-2"><Tecnologias/></div>
			<div class="w-full h-full col-span-1 row-span-1"><Tema/></div>
			<div class="w-full h-full col-span-2 row-span-1"><Contacto/></div>
		</div>
	</body>
	
</html>
