<div class="text-white w-full h-full bg-black/60 flex flex-col rounded-xl p-4 shadow-[rgba(56,130,190)_5px_5px_2px_2px]">
    <p class="text-3xl text-center lg:text-5xl">Skills</p>

    <!-- Contenedor de categorÃ­as que ocupa todo el espacio restante -->
    <div class="grid flex-grow grid-cols-2 grid-rows-2 gap-4">
        
        <!-- Frontend -->
        <div class="flex flex-col items-center">
            <p class="text-2xl text-center lg:text-4xl">Frontend</p>
            <div class="grid grid-cols-3 grid-rows-2 gap-2 lg:pt-5 place-items-center lg:grid-cols-6 lg:grid-rows-1">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/html5/html5-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14 " />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/css3/css3-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tailwindcss/tailwindcss-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/angularjs/angularjs-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/javascript/javascript-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/typescript/typescript-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
            </div>
        </div>

        <!-- Backend -->
        <div class="flex flex-col items-center ">
            <p class="text-2xl text-center lg:text-4xl">Backend</p>
            <div class="grid grid-cols-2 grid-rows-2 gap-2 lg:pt-5 place-items-center lg:grid-cols-3 lg:grid-rows-1">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/java/java-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/php/php-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14"/>
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/laravel/laravel-original.svg" class="object-contain w-5 h-5 col-span-2 lg:w-14 lg:h-14 lg:col-span-1"/>
            </div>
        </div>
        
        <!-- Database -->
        <div class="flex flex-col items-center">
            <p class="text-2xl text-center lg:text-4xl">Database</p>
            <div class="flex items-center justify-center gap-2">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mysql/mysql-original-wordmark.svg" class="object-contain w-12 h-auto lg:w-28" />
            </div>
        </div>

        <!-- Extras -->
        <div class="flex flex-col items-center">
            <p class="text-2xl text-center lg:text-4xl">Extras</p>
            <div class="grid grid-cols-2 grid-rows-2 gap-2 lg:pt-5 place-items-center lg:grid-cols-3 lg:grid-rows-1">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/docker/docker-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/figma/figma-original.svg" class="object-contain w-5 h-5 lg:w-14 lg:h-14" />
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/git/git-original.svg" class="object-contain w-5 h-5 col-span-2 lg:w-14 lg:h-14 lg:col-span-1" />
            </div>
        </div>

    </div>
</div>



